<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/layout_top_btn"
        android:background="#fff"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/back_button"
            android:src="@drawable/back"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Smart Calculator!"
            android:textColor="#707070"
            android:layout_toRightOf="@id/back_button"
            android:layout_toEndOf="@id/back_button"
            android:layout_toStartOf="@id/menu_button"
            android:layout_toLeftOf="@id/menu_button"
            android:gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/menu_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff"
        android:textSize="30sp"
        android:text=""
        android:textColor="#B7AE90"
        android:textAlignment="viewEnd"
        android:paddingRight="10dp"
        android:gravity="bottom"
        android:maxLines="3">
    </TextView>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="#fff"
        android:textSize="40sp"
        android:text=""
        android:textColor="#828282"
        android:textAlignment="viewEnd"
        android:paddingRight="10dp"
        android:gravity="center"
        android:maxLines="3">
    </TextView>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.5"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="8">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/layout_middle_btn"
                    android:background="#fff"
                    android:layout_alignParentTop="true">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/history"
                        android:src="@drawable/history"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"/>

<!--                    <TextView-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_centerVertical="true"-->
<!--                        android:text="Smart Calculator"-->
<!--                        android:textColor="#707070"-->
<!--                        android:layout_toRightOf="@id/back_button"-->
<!--                        android:layout_toEndOf="@id/back_button"-->
<!--                        android:layout_toStartOf="@id/menu_button"-->
<!--                        android:layout_toLeftOf="@id/menu_button"-->
<!--                        android:gravity="center_horizontal"-->
<!--                        android:background="@android:color/transparent"-->
<!--                        android:textSize="18sp"-->
<!--                        android:textStyle="bold"/>-->
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="30dp"
                        android:id="@+id/camera"
                        android:src="@drawable/camera"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#FFF"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/allClear"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/top_left_round_corner"
                        android:text="AC"
                        android:textColor="#ffa500"
                        android:textSize="30sp">
                    </Button>
                    <Button
                        android:id="@+id/clear"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F3F3F3"
                        android:text="C"
                        android:textColor="#ffa500"
                        android:textSize="30sp">
                    </Button>
                    <Button
                        android:id="@+id/paranthesisLeft"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F3F3F3"
                        android:text="("
                        android:textColor="#ffa500"
                        android:textSize="30sp">
                    </Button>
                    <Button
                        android:id="@+id/paranthesisRight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/top_right_round_corner"
                        android:text=")"
                        android:textColor="#ffa500"
                        android:textSize="30sp">
                    </Button>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/sin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F3F3F3"
                        android:text="sin"
                        android:textAllCaps="false"
                        android:textColor="#ffa500"
                        android:textSize="30sp">
                    </Button>
                    <Button
                        android:id="@+id/cos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F3F3F3"
                        android:text="cos"
                        android:textAllCaps="false"
                        android:textColor="#ffa500"
                        android:textSize="30sp">
                    </Button>
                    <Button
                        android:id="@+id/tan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F3F3F3"
                        android:text="tan"
                        android:textAllCaps="false"
                        android:textColor="#ffa500"
                        android:textSize="30sp">
                    </Button>
                    <Button
                        android:id="@+id/log"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F3F3F3"
                        android:text="log"
                        android:textAllCaps="false"
                        android:textColor="#ffa500"
                        android:textSize="30sp">
                    </Button>
                    <Button
                        android:id="@+id/ln"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F3F3F3"
                        android:text="ln"
                        android:textAllCaps="false"
                        android:textColor="#ffa500"
                        android:textSize="30sp">
                    </Button>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/factorial"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F3F3F3"
                        android:text="x!"
                        android:textAllCaps="false"
                        android:textColor="#ffa500"
                        android:textSize="30sp">
                    </Button>
                    <Button
                        android:id="@+id/square"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F3F3F3"
                        android:text="x²"
                        android:textAllCaps="false"
                        android:textColor="#ffa500"
                        android:textSize="30sp">
                    </Button>
                    <Button
                        android:id="@+id/sqrt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F3F3F3"
                        android:text="√"
                        android:textAllCaps="false"
                        android:textColor="#ffa500"
                        android:textSize="30sp">
                    </Button>
                    <Button
                        android:id="@+id/inverse"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F3F3F3"
                        android:text="1/x"
                        android:textAllCaps="false"
                        android:textColor="#ffa500"
                        android:textSize="30sp">
                    </Button>
                    <Button
                        android:id="@+id/divide"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F3F3F3"
                        android:text="÷"
                        android:textColor="#ffa500"
                        android:textSize="30sp">
                    </Button>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/b7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:text="7"
                        android:textColor="#828282"
                        android:textSize="30sp">
                    </Button>
                    <Button
                        android:id="@+id/b8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:text="8"
                        android:textColor="#828282"
                        android:textSize="30sp">
                    </Button>
                    <Button
                        android:id="@+id/b9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:text="9"
                        android:textColor="#828282"
                        android:textSize="30sp">
                    </Button>
                    <Button
                        android:id="@+id/multiply"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F3F3F3"
                        android:text="×"
                        android:textColor="#ffa500"
                        android:textSize="30sp">
                    </Button>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/b4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:text="4"
                        android:textAllCaps="false"
                        android:textColor="#828282"
                        android:textSize="30sp">
                    </Button>
                    <Button
                        android:id="@+id/b5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:text="5"
                        android:textColor="#828282"
                        android:textSize="30sp">
                    </Button>
                    <Button
                        android:id="@+id/b6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:text="6"
                        android:textColor="#828282"
                        android:textSize="30sp">
                    </Button>
                    <Button
                        android:id="@+id/minus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F3F3F3"
                        android:text="-"
                        android:textColor="#ffa500"
                        android:textSize="30sp">
                    </Button>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/b1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:text="1"
                        android:textColor="#828282"
                        android:textSize="30sp">
                    </Button>
                    <Button
                        android:id="@+id/b2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:text="2"
                        android:textColor="#828282"
                        android:textSize="30sp">
                    </Button>
                    <Button
                        android:id="@+id/b3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:text="3"
                        android:textColor="#828282"
                        android:textSize="30sp">
                    </Button>
                    <Button
                        android:id="@+id/plus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F3F3F3"
                        android:text="+"
                        android:textColor="#ffa500"
                        android:textSize="30sp">
                    </Button>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/pi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:text="π"
                        android:textColor="#828282"
                        android:textSize="30sp">
                    </Button>
                    <Button
                        android:id="@+id/b0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:text="0"
                        android:textColor="#828282"
                        android:textSize="30sp">
                    </Button>
                    <Button
                        android:id="@+id/dot"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:text="."
                        android:textColor="#828282"
                        android:textSize="30sp">
                    </Button>
                    <Button
                        android:id="@+id/equals"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#687166"
                        android:text="="
                        android:textColor="#fff"
                        android:textSize="30sp">
                    </Button>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>